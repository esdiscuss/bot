{
  "name": "pipermail-bot",
  "version": "3.2.7",
  "description": "The esdiscuss bot",
  "main": "index.js",
  "bin": "bin/cmd.js",
  "scripts": {
    "test": "node test local",
    "start": "node server.js",
    "predeploy": "npm i heroku-release",
    "deploy": "npm run deploy:staging && npm run deploy:promote",
    "deploy:staging": "heroku-release publish --app esdiscuss-bot-staging && node test staging",
    "deploy:promote": "heroku-release promote -p esdiscuss-bot -s esdiscuss-bot-staging -t esdiscuss-bot && node test prod"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/esdiscuss/bot.git"
  },
  "author": "ForbesLindesay",
  "license": "MIT",
  "dependencies": {
    "pipermail": "~3.1.1",
    "mongojs": "~2.4.0",
    "slugg": "~1.2.0",
    "barrage": "1.1.0",
    "ms": "~2.0.0",
    "promise": "~8.0.0",
    "raven": "~2.1.0"
  },
  "host": "bot.esdiscuss.org",
  "engines": {
    "node": "8.4.0"
  },
  "devDependencies": {
    "dotenv": "^4.0.0",
    "then-request": "^3.2.0"
  }
}
